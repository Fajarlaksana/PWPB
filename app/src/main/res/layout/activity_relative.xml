<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top">
    <TextView
            android:id="@+id/lb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ketik Disini"/>
    <EditText
            android:id="@+id/masuktext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lb1" android:layout_marginTop="-1dp"/>
    <Button
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/masuktext"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dip"
            android:text="OK" android:layout_marginTop="8dp" android:layout_marginRight="124dp"/>
    <Button
            android:id="@+id/Batal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/masuktext"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dip"
            android:text="Batal" android:layout_marginTop="5dp" android:layout_marginRight="17dp"/>

</RelativeLayout>